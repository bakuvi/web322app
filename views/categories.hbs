<div class="row">
    <div class="col-md-12">
        <h2>Categories</h2>
        <hr />
        <div class="table-responsive">
            <table class="table">
                <thead>
                <tr>
                    <th>Category ID</th>
                    <th>Category Name</th>
                </tr>
                </thead>
                <tbody>
                {{#each categories}}
                    <tr>
                        <td>{{this.id}}</td>
                        <td>{{this.category}}</td>
                    </tr>
                {{/each}}
                </tbody>
            </table>
        </div>
        {{#unless categories}}
            <div class="col-md-12 text-center">
                <strong>No categories found</strong>
            </div>
        {{/unless}}
    </div>
</div>